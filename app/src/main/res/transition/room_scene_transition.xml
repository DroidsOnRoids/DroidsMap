<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="1000">
    <fade android:fadingMode="fade_out" />
    <changeBounds />
    <changeTransform android:interpolator="@android:interpolator/accelerate_decelerate" />
    <changeClipBounds android:interpolator="@android:interpolator/accelerate_decelerate" />
    <changeImageTransform android:interpolator="@android:interpolator/accelerate_decelerate" />
    <fade android:fadingMode="fade_in">
        <targets>
            <target android:targetId="@+id/rootLayout" />
        </targets>
    </fade>
</transitionSet>